datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Usuario {
  id        Int       @id @default(autoincrement())
  nome      String
  email     String    @unique
  password  String
  isAdmin   Boolean   @default(false)
  createdAt DateTime  @default(now())

  reservas  Reserva[]
}

model Mesa {
  id        Int       @id @default(autoincrement())
  codigo    String    @unique
  n_lugares Int

  reservas  Reserva[]
}

model Reserva {
  id         Int      @id @default(autoincrement())
  data       DateTime
  n_pessoas  Int

  mesa       Mesa     @relation(fields: [mesaId], references: [id], onDelete: Restrict)
  mesaId     Int

  usuario    Usuario  @relation(fields: [usuarioId], references: [id], onDelete: Restrict)
  usuarioId  Int

  createdAt  DateTime @default(now())

  @@unique([data, mesaId])
}